{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true // Habilita la comprobación estricta de tipos.
  },
  "include": ["src/**/*.ts"], // Patrones de inclusión de archivos TypeScript.
  "exclude": ["node_modules"] // Carpetas a excluir.
}